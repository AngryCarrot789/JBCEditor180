<views:WindowEx x:Class="BCEdit180.Views.AppLoggerWindow"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:views="clr-namespace:BCEdit180.Views"
                xmlns:attachedProperties="clr-namespace:BCEdit180.AttachedProperties"
                mc:Ignorable="d"
                Title="Application Logs" Height="450" Width="600"
                Style="{DynamicResource CustomWindowStyleEx}">
    <Grid>
        <TextBox x:Name="LoggerTextBox" IsReadOnly="True" attachedProperties:HorizontalScrolling.UseHorizontalScrolling="True" BorderThickness="0" />
    </Grid>
</views:WindowEx>